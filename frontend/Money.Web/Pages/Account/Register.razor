@page "/Account/Register"

<PageTitle>Регистрация</PageTitle>

<MudText Typo="Typo.h3" GutterBottom>Создайте новый аккаунт</MudText>

<MudGrid>
    <MudItem md="6">
        <EditForm Model="Input" asp-route-returnUrl="@ReturnUrl" method="post" OnValidSubmit="RegisterUser" FormName="register">
            <DataAnnotationsValidator />

            <MudText Typo="Typo.body1" GutterBottom>Пожалуйста, заполните следующие поля:</MudText>

            <MudGrid>
                <MudItem md="12">
                    <MudTextField For="@(() => Input.Email)" @bind-Value="Input.Email"
                                  Label="Электронная почта" Placeholder="name@example.com"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "true" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudTextField For="@(() => Input.Password)" @bind-Value="Input.Password"
                                  Label="Пароль" InputType="InputType.Password" Placeholder="пароль"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "new-password" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudTextField For="@(() => Input.ConfirmPassword)" @bind-Value="Input.ConfirmPassword"
                                  Label="Подтвердите пароль" InputType="InputType.Password" Placeholder="подтвердите пароль"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "new-password" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth ButtonType="ButtonType.Submit">Зарегистрироваться</MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>
    </MudItem>
</MudGrid>
