@page "/Account/Login"

<PageTitle>Вход</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Войти в систему</MudText>

<MudGrid>
    <MudItem md="6">
        <EditForm FormName="login" method="post" Model="Input" OnValidSubmit="LoginUser">
            <DataAnnotationsValidator />

            <MudText GutterBottom Typo="Typo.body1">Пожалуйста, введите свои учетные данные</MudText>

            <MudGrid>
                <MudItem md="12">
                    <MudTextField For="@(() => Input.Email)" @bind-Value="Input.Email"
                                  Label="Электронная почта" Placeholder="name@example.com"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "true" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudTextField For="@(() => Input.Password)" @bind-Value="Input.Password"
                                  Label="Пароль" InputType="InputType.Password" Placeholder="пароль"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "current-password" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" FullWidth Variant="Variant.Filled">Войти</MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>

        <MudGrid Class="mt-4">
            <MudItem md="12">
                <MudLink Href="@(NavigationManager.GetUriWithReturnUrl("Account/Register", ReturnUrl))">
                    Нет аккаунта? Зарегистрируйтесь
                </MudLink>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>
