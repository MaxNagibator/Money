@page "/Account/Login"
@attribute [AllowAnonymous]

<PageTitle>Вход</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem md="12">
        <MudText Align="Align.Center"
                 GutterBottom
                 Typo="Typo.h3">
            Войти в систему
        </MudText>
    </MudItem>

    <MudItem md="6">
        <EditForm FormName="login"
                  method="post"
                  Model="Input"
                  OnValidSubmit="LoginUserAsync">
            <DataAnnotationsValidator />

            <MudText GutterBottom
                     Typo="Typo.body1">
                Пожалуйста, введите свои учетные данные
            </MudText>

            <MudGrid>
                <MudItem md="12">
                    <MudTextField @bind-Value="Input.Email"
                                  For="@(() => Input.Email)"
                                  Label="Электронная почта"
                                  Placeholder="name@example.com"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "true" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudTextField @bind-Value="Input.Password"
                                  For="@(() => Input.Password)"
                                  InputType="InputType.Password"
                                  Label="Пароль"
                                  Placeholder="пароль"
                                  UserAttributes="@(new Dictionary<string, object?> { { "autocomplete", "current-password" }, { "aria-required", "true" } })" />
                </MudItem>
                <MudItem md="12">
                    <MudButton ButtonType="ButtonType.Submit"
                               Color="Color.Primary"
                               FullWidth
                               Variant="Variant.Filled">
                        Войти
                    </MudButton>
                </MudItem>
            </MudGrid>
        </EditForm>

        <MudGrid Class="mt-4">
            <MudItem md="12">
                <MudLink Href="@(NavigationManager.GetUriWithReturnUrl("Account/Register", ReturnUrl))">
                    Нет аккаунта? Зарегистрируйтесь
                </MudLink>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>
